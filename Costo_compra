namespace costo_de_compra
{
    class Program
    {
        static void Main(string[]args)
        {
            int cantidad;
            float precio,importe;
            string linea;
            Console.Write("cantidad de art√≠culos:");
            linea=Console.ReadLine();
            cantidad=int.Parse(linea);
            Console.Write("valor unitario del producto:");
            linea=Console.ReadLine();
